<div class="modal fade" id="person-cv-export" tabindex="-1" role="dialog" aria-labelledby="people-skill-new-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="person-cv-export-label">CV-Export</h5>
        <button type="button" class="close" onclick={{action "abortExport"}} aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row my-3">
            <button type="button" onclick={{pipe (action "startExport" this.model.id)}} class="btn btn-primary btn-lg btn-block">Normales CV</button>
          </div>
          <div class="row my-3">
		<button type="button" onclick={{pipe (action "startAnonymizedExport" this.model.id)}} class="btn btn-primary btn-lg btn-block">Anonymisiertes CV</button>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" onclick={{action "abortExport"}} class="btn btn-secondary">Abbrechen</button>
      </div>
    </div>
  </div>
</div>
