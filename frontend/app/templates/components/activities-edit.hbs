<div id="activity">
  <div class="card-header bg-info">
    <div class="row">
      <div class="col-sm-6 header-text">
        {{t "activities-edit.activities"}}
      </div>
    </div>
  </div>
  <div class="border border-info rounded-bottom">
    <div class="card-body d-flex flex-column">
      <div id="competence-content-show" class="mb-2">
        {{#each this.sortedActivities as |activity|}}
          <div class="zeile">
            <div class="row">
              <div class="col-sm-3">
                <div class="input-group centered-content-input">
                  <DaterangeEdit @entity={{activity}} />
                </div>
              </div>
              <div class="col-sm-7">
                <label for={{concat this.elementId "-" activity.id "-role"}}>{{t "activities-edit.role"}}</label>
                <Input @id={{concat this.elementId "-" activity.id "-role"}} @value={{activity.role}} class="form-control" />
                <label class="mt-2" for={{concat this.elementId "-" activity.id "-desc"}}>{{t "activities-edit.description"}}</label>
                <Textarea @id={{concat this.elementId "-" activity.id "-desc"}} @value={{activity.description}} class="input-xxlarge form-control" />
              </div>
              <div onclick={{action "notify"}} role="button">
                <DeleteWithConfirmation @entry={{activity}}>
                  {{t "activities-edit.delete"}}
                </DeleteWithConfirmation>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <div class="mt-auto">
        <button type="button" onclick={{action "submit" this.person}} role="button" class="btn btn-primary">{{t "activities-edit.save"}}</button>
        <button type="button" onclick={{action "abortEdit"}} role="button" class="btn abort-button">{{t "activities-edit.cancel"}}</button>
      </div>
    </div>
  </div>
</div>
{{yield}}
